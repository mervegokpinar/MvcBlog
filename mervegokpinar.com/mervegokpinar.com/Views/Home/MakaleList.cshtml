
@{
    ViewBag.Title = "MakaleList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>MakaleList</title>
</head>
<body>
    <div>
        <section id="main-content">
            <section class="wrapper">
                <h3><i class="fa fa-angle-right"></i>Tüm Makaleler</h3>

                <div class="row mt">
                    <div class="col-md-12">
                        <div class="content-panel">
                            <table class="table table-striped table-advance table-hover" style="width:100%">
                                <h4> <i class="fa fa-angle-right"></i> Makaleler</h4>
                                <hr>
                                <thead>
                                    <tr>
                                        <th> ID</th>
                                        <th> Yazi</th>

                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td nowrap>@item.ID</td>
                                            <td style="width:100%">
                                                @Html.Raw(HttpUtility.HtmlDecode(@item.yazi)) @*Html kodlarını decode edebilmek için kullanırız*@

                                            </td>

                                            <td nowrap>
                                                <a class="btn btn-primary btn-xs" href="/Home/Duzenle/@item.ID"><i class="fa fa-pencil"></i></a>
                                                <a class="btn btn-danger btn-xs" href="/Home/Sil/@item.ID"><i class="fa fa-trash-o "></i></a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div><!-- /content-panel -->
                    </div><!-- /col-md-12 -->
                </div><!-- /row -->
    </div>
</body>
</html>
