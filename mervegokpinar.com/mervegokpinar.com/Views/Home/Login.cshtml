
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <title>Giriş Sayfası-Login Page</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="icon" type="image/png" href="~/images/icons/favicon.ico" />   
    <link href="~/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" type="text/css" href="~/fonts/font-awesome-4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" type="text/css" href="~/fonts/Linearicons-Free-v1.0.0/icon-font.min.css">
    <link rel="stylesheet" type="text/css" href="~/vendor/animate/animate.css">
    <link rel="stylesheet" type="text/css" href="~/vendor/css-hamburgers/hamburgers.min.css">
    <link rel="stylesheet" type="text/css" href="~/vendor/animsition/css/animsition.min.css">
    <link rel="stylesheet" type="text/css" href="~/vendor/select2/select2.min.css">
    <link href="~/vendor/daterangepicker/daterangepicker.css" rel="stylesheet" />
    <link href="~/Content/util.css" rel="stylesheet" />
    <link href="~/Content/main.css" rel="stylesheet" />
</head>
<body>

    <div class="limiter">
        <div class="container-login100">
            <div class="wrap-login100">
                <div class="login100-form-title" style="background-image: url(https://cdn.shortpixel.ai/client/q_glossy,ret_img/../images/bg-01.jpg);">
                    <span class="login100-form-title-1">
                        Giriş Yap
                    </span>
                </div>

                <form class="login100-form validate-form" action="/Home/Giris" method="post">

                    <div class="wrap-input100 validate-input m-b-26" data-validate="Kullanıcı Adı Boş Geçilemez">
                        <span class="label-input100">Kullanıcı Adı:</span>
                        <input class="input100" type="text" name="username" placeholder="Kullanıcı Adı Giriniz">
                        <span class="focus-input100"></span>
                        
                    </div>

                    <div class="wrap-input100 validate-input m-b-18 " data-validate="Şifre Boş Geçilemez">
                        <span class="label-input100 ">Şifre:</span>
                        <input class="input100" type="password" name="pass" placeholder="Şifre Giriniz">
                        <span class="focus-input100"></span>
                    </div>

                    <div class="flex-sb-m w-full p-b-30">
                        <div class="contact100-form-checkbox">
                            <input class="input-checkbox100" id="ckb1" type="checkbox" name="remember-me">
                            <label class="label-checkbox100" for="ckb1">
                                Beni Hatırla!
                            </label>
                        </div>

                        <div>
                            <a href="#" class="txt1">
                                Şifremi Unuttum
                            </a>
                        </div>
                    </div>
                    <div>
                        <p style="color:red">@ViewBag.Error</p>
                    </div>
                    <div class="container-login100-form-btn" style="margin-top:80px">

                        <a class="login100-form-btn" style="background-color:orange" href="/Home/Kaydol">Kaydol</a>
                    </div>
                    <div class="container-login100-form-btn" style="margin-left:200px; margin-top:-50px">
                        <button class="login100-form-btn">
                            Giriş
                        </button>
                    </div>

                </form>
            </div>
        </div>
    </div>

    <script src="~/vendor/jquery/jquery-3.2.1.min.js"></script>
    <script src="~/vendor/animsition/js/animsition.min.js"></script>
    <script src="~/vendor/bootstrap/js/popper.js"></script>
    <script src="~/vendor/bootstrap/js/bootstrap.min.js"></script>
    <script src="~/vendor/select2/select2.min.js"></script>
    <script src="~/vendor/daterangepicker/moment.min.js"></script>
    <script src="~/vendor/daterangepicker/daterangepicker.js"></script>
    <script src="~/vendor/countdowntime/countdowntime.js"></script>
    <script src="~/Scripts/main.js"></script>

</body>
</html>
